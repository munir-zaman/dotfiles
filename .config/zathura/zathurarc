# zathurarc

# colors
set statusbar-bg "#041124"
set statusbar-fg white

# settings
set window-height 1024
set window-width 768
set adjust-open width

# use sqlite as bookmarks database backend
set database sqlite

# key bindings
map <PageUp> navigate previous
map <PageDown> navigate next

map + zoom in
map - zoom out

map <C-q> quit

map i recolor


# transparent bg
set default-bg rgba(0,0,0,0.7)
set recolor-lightcolor rgba(0,0,0,0)

